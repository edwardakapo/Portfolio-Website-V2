---
import Navbar from "./Navbar.astro"
---
<section id="header">
    <div id="header-content" class="">
        <a href="">
            <h1 id="main-title">
                edward akapo
            </h1>
        </a>
        <h2 id="subtitle">
            canada-based software engineer & product designer
        </h2>
        <h2 id="subtitle2">
            canada-based <br> SWE &  product designer
        </h2>
    </div>
    <div class="nav">

        <Navbar />
    </div>
</section>


<style >
    #header {
        font-family: 'Noto sans';
        text-transform: uppercase;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        --transition-animation : all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    #header-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-top : 2rem;
        padding-bottom: 3rem;
        transition: var(--transition-animation)
    }
    a:hover {
        color: #3EA9AC;
    }
    #header h1 {
        font-size: 65px;
        font-weight: 700;
        letter-spacing: calc(65px * 0.1);
        margin: 0;
        transition: var(--transition-animation)
    }
    #header h2 {
        font-size: 14px;
        font-weight: 600;
        letter-spacing: calc(14px * 0.25);
        color: #A8A8A8;
        margin: 0.8rem 0 0 0;
        transition: var(--transition-animation)
    }

    #header.scrolled #header-content {
        padding: 1rem 0;
    }
    #header.scrolled h1 {
        font-size: 0px;
    }
    #header.scrolled h2 {
        font-size: 0px;
    }
    #subtitle2 {
        display: none;
    }

    /* Add this to create space for the fixed header */
    /* body {
        padding-top: 180px;
    } */

    @media screen and (max-width:800px){

        #header {

        }
        #header.scrolled #header-content {
            height: 0px;
            padding: 12px;
        }
        #header h1 {
            width: 80%;
            margin : auto;
            font-size: 60px;
            text-align: center;
            line-height: 65px;
            padding-bottom: 1.5rem;
        }

        #header h2 {
            width: 90%;
            margin : auto;
            text-align: center;
            line-height: 25px;
        }
        #subtitle {
            display: none;
        }
        #subtitle2 {
        display: block;
        }
        #header.scrolled h1 {
        font-size: 0px;
        line-height: 0px;
        }
        #header.scrolled h2 {
        font-size: 0px;
        line-height: 0px;
        }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('header') as HTMLElement;
    const navbar = document.getElementById('navbar') as HTMLElement;
    const mainDiv = document.getElementById('main-div') as HTMLElement;
    const mobileNav = document.getElementById('mobile-nav') as HTMLElement;
    let isScrolled = false;
    let ticking = false;

    function updateHeaderState(scrolled: boolean) {
        if (scrolled) {
            header.classList.add('scrolled');
            navbar.classList.add('scrolled');
            mainDiv.classList.add('scrolled');
            mobileNav.classList.add('scrolled');
        } else {
            header.classList.remove('scrolled');
            navbar.classList.remove('scrolled');
            mainDiv.classList.remove('scrolled');
            mobileNav.classList.remove('scrolled');



        }
    }

    function handleScroll() {
        if (!ticking) {
            window.requestAnimationFrame(() => {
                const shouldBeScrolled = window.scrollY > 50; // Adjust this value as needed
                if (shouldBeScrolled !== isScrolled) {
                    isScrolled = shouldBeScrolled;
                    updateHeaderState(isScrolled);
                }
                ticking = false;
            });
            ticking = true;
        }
    }

    window.addEventListener('scroll', handleScroll, { passive: true });

    // Initial call to set correct state on page load
    handleScroll();
});
</script>