---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />

		<!-- Favicons -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg">
		<link rel="icon" type="image/png" href="/favicon.png">
		<!-- end of favicons -->

		<!-- Meta Character Set -->
<meta charset="UTF-8">

<!-- Viewport for Responsive Design -->
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<!-- Meta Description -->
<meta name="description" content="I'm a Full Stack Software Developer based in Canada with a Bachelor's in Computer Science, three years of industry experience, and two AWS certifications. Specializing in scalable web applications, I offer custom solutions to small businesses to enhance their efficiency.">

<!-- Keywords -->
<meta name="keywords" content="Full Stack Developer, Software Developer, Web Applications, AWS Certified, Computer Science, Cloud Architecture, API Development, UI/UX Design, Freelance Developer, Custom Solutions, Canada, Portfolio">

<!-- Author -->
<meta name="author" content="Oluwademilade Edward Akapo">

<!-- Robots -->
<meta name="robots" content="index, follow">

<!-- Open Graph Tags for Social Media -->
<meta property="og:title" content="Edward Akapo | Full Stack Software Developer">
<meta property="og:description" content="Explore my portfolio as a Full Stack Software Developer specializing in scalable web applications, API development, and custom solutions for small businesses.">
<!-- <meta property="og:image" content="URL_to_your_profile_or_portfolio_image.jpg"> Update with your actual image URL -->
<meta property="og:url" content="https://edwardakapo.com"> <!-- Update with your actual portfolio URL -->
<meta property="og:type" content="website">

<!-- Twitter Card Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="Edward Akapo | Full Stack Software Developer">
<meta name="twitter:description" content="Discover my work as a Full Stack Software Developer focused on creating efficient web applications and custom solutions for small businesses.">
<!-- <meta name="twitter:image" content="URL_to_your_profile_or_portfolio_image.jpg"> Update with your actual image URL -->
<meta name="twitter:url" content="https://edwardakapo.com"> <!-- Update with your actual portfolio URL -->


		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth; 
		scroll-padding-top: 180px;
		
	}

		/* For WebKit browsers (Chrome, Safari, Edge) */
		.project-scroll::-webkit-scrollbar {
		width: 8px; /* Thin scrollbar */
		}

		.project-scroll::-webkit-scrollbar-thumb {
		background-color: rgba(0, 0, 0, 0.3); /* Scrollbar thumb color */
		border-radius: 10px; /* Rounded scrollbar thumb */
		}

		.project-scroll::-webkit-scrollbar-track {
		background-color: rgba(0, 0, 0, 0.1); /* Scrollbar track color */
		}

		/* For Firefox */
		.project-scroll {
		scrollbar-width: thin; /* Makes the scrollbar thinner */
		scrollbar-color: rgba(0, 0, 0, 0.3) rgba(0, 0, 0, 0.1); /* Thumb and track color */
		}
</style>
